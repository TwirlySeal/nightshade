{
  "name": "Nightshade for Canvas",
  "version": "3.0",
  "manifest_version": 3,
  "description": "A browser extension that transforms Canvas with a modern, responsive UI and dark mode.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_title": "Popup for setting Canvas URL",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "build/injected.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "build/css/global.css",
        "build/css/dashboard.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}